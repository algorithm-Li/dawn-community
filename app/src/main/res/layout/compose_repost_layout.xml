<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/repost_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="2.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/timeline_feedcard_retweet_background_auto"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/repost_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/example_profile_img"
            android:contentDescription="@string/TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/retweet_weibo_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repost_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:gravity="center"
                android:text="//@闭关写代码"
                android:textColor="@color/retweet_weibo_author"
                android:textSize="@dimen/font_size_15" />

            <TextView
                android:id="@+id/repost_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:lines="2"
                android:text="写代码到半夜，兴奋得睡不着。。。不成熟的表现成熟的表现[doge]"
                android:textColor="@color/retweet_weibo_text"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>
</layout>