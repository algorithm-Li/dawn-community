<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dawn.community">

    <application
        android:name=".CommunityApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".activity.PersonInfoActivity"/>
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.MessageCenterActivity" />
        <activity android:name=".activity.DynamicActivity"/>
        <activity android:name=".activity.ChatActivity"/>

        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.HistoryActivity"/>
        <activity android:name=".MainActivity"/>
    </application>

</manifest>